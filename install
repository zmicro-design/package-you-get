#!/bin/bash

set -e

help() {
  echo "Usage:"
  echo "  zmicro package install you-get <args...>"
  echo ""
}

install() {
  which you-get >>/dev/null 2>&1
  if [ "$?" != "0" ]; then
    pm install -y you-get
  fi
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  install
  log::success "install you-get success."
}

run() {
  core $@
}

run $@
